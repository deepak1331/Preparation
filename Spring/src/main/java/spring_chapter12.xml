<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
    "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
<!-- 	************ Context Aware, and Bean Name Aware ************* -->
	<bean id="triangle" class="Shapes.Chapter12.Triangle" >
	<property name="pointA" ref="zeroPoint"></property>
		<property name="pointB" ref="point2"></property>
		<property name="pointC" ref="point3"></property>
	</bean>

	<bean id="pointA" class="Shapes.Chapter12.Point">
	<property name="x" value="0"></property>
	<property name="y" value="0"></property>
	</bean>

	<bean id="pointB" class="Shapes.Chapter12.Point">
	<property name="x" value="20"></property>
	<property name="y" value="30"></property>
	</bean>

	<bean id="pointC" class="Shapes.Chapter12.Point">
	<property name="x" value="30"></property>
	<property name="y" value="20"></property>
	</bean>



</beans>
